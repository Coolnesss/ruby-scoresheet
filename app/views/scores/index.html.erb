<h1>Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <% (1..@exercise_cnt).each do |ex| %>
        <th> <%=ex%></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @exercise_stats.each do |name, scores| %>
      <tr>
        <td><%= name %></td>
        <% (1..@exercise_cnt).each do |ex| %>
          <th> <%= format(scores[ex]) %></th>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

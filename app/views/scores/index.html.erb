<h1>Exercises</h1>

<%= @exercise_stats %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <% (1..@exercise_cnt).each do |ex| %>
        <th> <%= link_to "#{ex}", "https://github.com/mluukkai/ruby-tehtava#{ex}" %> </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @exercise_stats.each do |name, scores| %>
      <tr>
        <td><%= link_to name, "http://github.com/#{name}" %></td>
        <% (1..@exercise_cnt).each do |ex| %>
          <th> <%= format(scores[ex]) %></th>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% @scores.each do |s| %>
  <%= s.name %>
<% end %>

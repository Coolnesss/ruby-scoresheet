<p id="notice"><%= notice %></p>

<h1>Listing Confs</h1>

<table>
  <thead>
    <tr>
      <th>Exercise count</th>
      <th>Repository base</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confs.each do |conf| %>
      <tr>
        <td><%= conf.exercise_count %></td>
        <td><%= conf.repository_base %></td>
        <td><%= link_to 'Show', conf %></td>
        <td><%= link_to 'Edit', edit_conf_path(conf) %></td>
        <td><%= link_to 'Destroy', conf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

